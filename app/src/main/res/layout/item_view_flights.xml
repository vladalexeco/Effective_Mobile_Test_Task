<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/flightsRoundImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round"
        android:contentDescription="@null"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/flightNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Уральские авиалинии"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/flightsRoundImageView"/>

    <ImageView
        android:id="@+id/flightAngleImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:background="@drawable/angle"
        android:backgroundTint="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/flightTimeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="08:05  09:55   16:35  18:55 "
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/flightsRoundImageView"
        app:layout_constraintTop_toBottomOf="@+id/flightNameTextView" />

    <TextView
        android:id="@+id/flightRubleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ruble"
        android:textColor="@color/blue"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toStartOf="@id/flightAngleImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/flightPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 390"
        android:textColor="@color/blue"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@id/flightRubleTextView"
        app:layout_constraintTop_toTopOf="@id/flightRubleTextView" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_5"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>