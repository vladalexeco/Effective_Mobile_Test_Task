<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/flyAwayImageView"
        android:layout_width="132dp"
        android:layout_height="133dp"
        android:contentDescription="@null"
        android:src="@drawable/fly_away_placeholder"/>

    <TextView
        android:id="@+id/flyAwayMusicGroupTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Die Antword"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/flyAwayCityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Будапешт"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/aviatickets"
            android:contentDescription="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/from"/>

        <TextView
            android:id="@+id/flyAwayPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="22 264"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/ruble" />

    </LinearLayout>

</LinearLayout>